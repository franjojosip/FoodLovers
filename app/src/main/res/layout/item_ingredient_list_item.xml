<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/iv_dot"
            android:layout_height="6dp"
            android:src="@drawable/ic_dot"
            android:layout_width="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:importantForAccessibility="no"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:fontFamily="@font/playfair_display_semi_bold"
            android:id="@+id/tv_ingredient_amount"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/color_gray_light"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_dot"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2" />

        <TextView
            android:fontFamily="@font/playfair_display_regular"
            android:id="@+id/tv_ingredient_name"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="3dp"
            android:layout_width="0dp"
            android:textColor="@color/color_gray_light"
            android:textSize="15sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_ingredient_amount"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Eggs" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>