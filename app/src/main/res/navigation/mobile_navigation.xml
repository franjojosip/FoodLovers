<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">
    <fragment
        android:id="@+id/nav_home"
        android:name="ht.ferit.fjjukic.foodlovers.app_recipe.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_nav_search_recipes"
            app:destination="@id/nav_search_recipes" />
        <action
            android:id="@+id/action_nav_home_to_nav_search_category"
            app:destination="@id/nav_search_category" />
        <action
            android:id="@+id/action_nav_home_to_nav_show_recipe"
            app:destination="@id/nav_show_recipe" />
    </fragment>

    <fragment
        android:id="@+id/nav_recipes"
        android:name="ht.ferit.fjjukic.foodlovers.app_recipe.recipes.RecipesFragment"
        android:label="Recipes"
        tools:layout="@layout/fragment_recipes" />

    <fragment
        android:id="@+id/nav_favorites"
        android:name="ht.ferit.fjjukic.foodlovers.app_recipe.home.HomeFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="ht.ferit.fjjukic.foodlovers.app_recipe.home.HomeFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_search_recipes"
        android:name="ht.ferit.fjjukic.foodlovers.app_recipe.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search_recipes" />

    <fragment
        android:id="@+id/nav_search_category"
        android:name="ht.ferit.fjjukic.foodlovers.app_recipe.CategoryRecipesFragment"
        android:label="CategoryRecipesFragment"
        tools:layout="@layout/fragment_search_recipes">

        <argument
            android:name="category"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_show_recipe"
        android:name="ht.ferit.fjjukic.foodlovers.app_recipe.showrecipe.ShowRecipeFragment"
        android:label="ShowRecipeFragment"
        tools:layout="@layout/fragment_show_recipe">

        <argument
            android:name="id"
            app:argType="string"
            app:nullable="true" />
    </fragment>

</navigation>