<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:statusBarColor">@color/color_accent</item>
        <item name="android:autofilledHighlight">@android:color/transparent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:ambientShadowAlpha">0.04</item>
        <item name="android:spotShadowAlpha">0.04</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_top_rounded</item>
    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="strokeColor">@color/color_text_input_layout_stroke</item>
        <item name="boxStrokeColor">@color/color_text_input_layout_box</item>
        <item name="hintTextColor">@color/color_text_input_layout_hint</item>
        <item name="endIconTint">@color/color_text_input_layout</item>
        <item name="colorControlActivated">@color/color_text_input_layout</item>
        <item name="errorTextColor">@color/color_text_input_layout_error</item>
        <item name="boxStrokeErrorColor">@color/color_text_input_layout_error</item>
        <item name="boxStrokeWidth">1.5dp</item>
    </style>

    <style name="RoundedTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="strokeColor">@color/color_text_input_layout_box_light</item>
        <item name="boxStrokeColor">@drawable/ingredient_field_box_color</item>
        <item name="hintTextColor">@color/color_text_input_layout_box_light</item>
        <item name="endIconTint">@color/color_text_input_layout_box_light</item>
        <item name="colorControlActivated">@color/color_text_input_layout_box_light</item>
        <item name="errorTextColor">@color/color_text_input_layout_error</item>
        <item name="boxStrokeErrorColor">@color/color_text_input_layout_error</item>
        <item name="boxStrokeWidthFocused">1.5dp</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded
        </item>
    </style>

    <style name="IngredientRoundedTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="strokeColor">@color/color_text_input_layout_box_light</item>
        <item name="boxStrokeColor">@drawable/ingredient_field_box_color</item>
        <item name="hintTextColor">@color/color_dark_gray</item>
        <item name="placeholderTextColor">@color/color_dark_gray</item>
        <item name="endIconTint">@color/color_text_input_layout_box_light</item>
        <item name="colorControlActivated">@color/color_text_input_layout_box_light</item>
        <item name="errorTextColor">@color/color_text_input_layout_error</item>
        <item name="boxStrokeErrorColor">@color/color_text_input_layout_error</item>
        <item name="boxStrokeWidthFocused">1.5dp</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded
        </item>
    </style>

    <style name="PlaceholderTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_dark_gray</item>
        <item name="android:textColorHint">@color/color_dark_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CustomEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/color_search_text</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="SearchTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="strokeColor">@color/color_text_input_layout_stroke</item>
        <item name="boxStrokeColor">@color/color_text_input_layout_box</item>
        <item name="hintTextColor">@color/color_text_input_layout_hint</item>
        <item name="endIconTint">@color/color_text_input_layout</item>
        <item name="colorControlActivated">@color/color_text_input_layout</item>
        <item name="errorTextColor">@color/color_text_input_layout_error</item>
        <item name="boxStrokeErrorColor">@color/color_text_input_layout_error</item>
        <item name="boxStrokeWidth">1.5dp</item>
    </style>

    <style name="stepEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/color_text_input_layout</item>
    </style>

    <style name="MaterialAlertDialog_rounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <declare-styleable name="CustomStepView">
        <attr format="string" name="step_text" />
    </declare-styleable>

    <declare-styleable name="IngredientView">
        <attr format="boolean" name="has_close_action" />
    </declare-styleable>
</resources>
